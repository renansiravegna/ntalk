<% include ../header %>

<header>
	<h2>Ntalk - Agenda de contatos</h2>
</header>

<section>
	<section class="span12">
    <form action="/contato" method="post" class="well form-inline">
		<input id="nome" type="text" name="contato[nome]" placeholder="Nome">
		<input id="email" type="text" name="contato[email]" placeholder="E-mail">

		<button id="cadastrar" type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
    
	<table class="table well">
		<thead>
			<tr>
				<th>Nome</th>
				<th>E-mail</th>
				<th>Status</th>
				<th>Ação</th>
			</tr>
		</thead>

		<tbody>
			<% contatos.forEach(function(contato) { %>
			<tr>
				<td><%- contato.nome %></td>
				<td><%- contato.email %></td>
				<td><span id= "notify_<%- contato.email %>" class="label"> Offline </span></td>
				<td>
					<a href="/contato/<%- contato._id %>" class="btn btn-info">Detalhes</a>
              		<a href="/chat/<%- contato.email %>" id="chat_<%- contato.email %>" class="btn btn-inverse">Conversar</a>
				</td>
			</tr>
			<% }) %>
		</tbody>
	</table>
</section>

<% include notify_script %>
<% include ../exit %>
<% include ../footer %>